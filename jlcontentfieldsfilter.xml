<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="plugin" group="jlsitemap" method="upgrade">
	<name>JLSitemap - Фильтр по полям материалов</name>
	<author>Artem Vasilev - Webmasterskaya</author>
	<creationDate>01.07.2022</creationDate>
	<copyright>Copyright (C) 2022 Webmasterskaya. All rights reserved.</copyright>
	<license>GNU General Public License version 3 or later; see LICENSE.txt</license>
	<authorEmail>dev@webmasterskaya.xyz</authorEmail>
	<authorUrl>https://webmasterskaya.xyz</authorUrl>
	<version>1.0.0</version>
	<description>Плагин для добавления отфильтрованных материалов в карту сайта.</description>
	<files>
		<filename plugin="jlcontentfieldsfilter">jlcontentfieldsfilter.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="filters" label="Фильтры">
				<field name="only_with_title" type="radio"
					   label="Выгружать только фильтры с заполненным Title"
					   default="1"
					   class="btn-group btn-group-yesno">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="filters_changefreq" type="list" default="weekly"
					   label="Частота изменений">
					<option value="always">always</option>
					<option value="hourly">hourly</option>
					<option value="daily">daily</option>
					<option value="weekly">weekly</option>
					<option value="monthly">monthly</option>
					<option value="yearly">yearly</option>
					<option value="never">never</option>
				</field>
				<field name="filters_priority" type="list"
					   default="0.5" label="Приоритет">
					<option value="0.0">0.0</option>
					<option value="0.1">0.1</option>
					<option value="0.2">0.2</option>
					<option value="0.3">0.3</option>
					<option value="0.4">0.4</option>
					<option value="0.5">0.5</option>
					<option value="0.6">0.6</option>
					<option value="0.7">0.7</option>
					<option value="0.8">0.8</option>
					<option value="0.9">0.9</option>
					<option value="1">1</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>